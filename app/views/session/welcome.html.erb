    <div class="jumbotron">
      <h1>Welcome<%= " " + current_user.name if current_user %></h1>
      <h4>Upload books and manage them here!</h4>
      <p><%= link_to 'Get started...', books_path, class: 'radius button tiny' %></p>
    </div>

    <% if current_user %>
        <%= link_to "Signout", signout_path, class: 'radius button alert tiny', method: :delete %>
    <% else %>
        <%= form_tag signin_path, class: 'form' do %>
            <%= text_field_tag 'email', nil, placeholder: 'Enter your email' %>
            <%= password_field_tag 'password', nil, placeholder: 'Password' %>
            <%=  submit_tag "Sign in", class: 'radius button tiny' %>
        <% end %>
    <% end %>


    <h3>Sign Up</h3>
    <%= form_tag signup_path, class: 'form' do %>
        <%= text_field_tag 'name', nil, placeholder: 'Name' %>
        <%= text_field_tag 'email', nil, placeholder: 'Email' %>
        <%= password_field_tag 'password', nil, placeholder: 'password' %>
        <%= password_field_tag 'password_confirmation', nil, placeholder: 'Password_confrimation' %>
        <%=  submit_tag 'Sign up', class: 'radius button tiny' %>


