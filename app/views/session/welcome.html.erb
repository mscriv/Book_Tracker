    <div class="jumbotron">
      <h1>Welcome<%= " " + current_user.name if current_user %></h1>
      <h4>Upload books and manage them here!</h4>
    </div>
    <p>First time here?<%= link_to 'Sign up now!', signup_path %></p>

    <div>
       <% if current_user %>
        <%= link_to "Signout", signout_path, class: 'radius button alert tiny', method: :delete %>
       <% else %>
        <%= form_tag signin_path, class: 'form' do %>
            <%= text_field_tag 'email', nil, placeholder: 'Enter your email' %>
            <%= password_field_tag 'password', nil, placeholder: 'Password' %>
            <%=  submit_tag "Sign in", class: 'radius button tiny' %>
        <% end %>
       <% end %>
    </div>

